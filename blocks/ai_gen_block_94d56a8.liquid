{% doc %}
  @prompt
    we have to put here a image where showing exclusive deals
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-exclusive-deals-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    max-width: 100%;
    overflow: hidden;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-exclusive-deals-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    display: block;
  }

  .ai-exclusive-deals-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
  }

  .ai-exclusive-deals-placeholder-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 400px;
  }

  .ai-exclusive-deals-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }

  .ai-exclusive-deals-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    background-color: rgba(255, 255, 255, 0.9);
    border-radius: 4px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-exclusive-deals-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity }};
    pointer-events: none;
  }

  .ai-exclusive-deals-content-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: {{ block.settings.text_alignment }};
    width: 90%;
    max-width: 600px;
    z-index: 2;
  }

  .ai-exclusive-deals-badge-{{ ai_gen_id }} {
    display: inline-block;
    padding: 8px 16px;
    background-color: {{ block.settings.badge_bg_color }};
    color: {{ block.settings.badge_text_color }};
    font-size: {{ block.settings.badge_font_size }}px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border-radius: {{ block.settings.badge_border_radius }}px;
    margin-bottom: 16px;
  }

  .ai-exclusive-deals-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_font_size }}px;
    font-weight: {{ block.settings.heading_font_weight }};
    color: {{ block.settings.heading_color }};
    margin: 0 0 16px;
    line-height: 1.2;
  }

  .ai-exclusive-deals-subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_font_size }}px;
    color: {{ block.settings.subheading_color }};
    margin: 0 0 24px;
    line-height: 1.5;
  }

  .ai-exclusive-deals-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 14px 32px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: 700;
    text-transform: uppercase;
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    transition: all 0.3s ease;
    letter-spacing: 0.05em;
  }

  .ai-exclusive-deals-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
    color: {{ block.settings.button_hover_text_color }};
    transform: translateY(-2px);
  }

  @media screen and (max-width: 749px) {
    .ai-exclusive-deals-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_font_size | times: 0.7 }}px;
    }

    .ai-exclusive-deals-subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_font_size | times: 0.85 }}px;
    }

    .ai-exclusive-deals-button-{{ ai_gen_id }} {
      font-size: {{ block.settings.button_font_size | times: 0.9 }}px;
      padding: 12px 24px;
    }

    .ai-exclusive-deals-badge-{{ ai_gen_id }} {
      font-size: {{ block.settings.badge_font_size | times: 0.85 }}px;
    }
  }
{% endstyle %}

<div class="ai-exclusive-deals-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-exclusive-deals-image-wrapper-{{ ai_gen_id }}">
    {% if block.settings.image %}
      <img
        src="{{ block.settings.image | image_url: width: 2000 }}"
        alt="{{ block.settings.image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.image.width }}"
        height="{{ block.settings.image.height }}"
        class="ai-exclusive-deals-image-{{ ai_gen_id }}"
      >
    {% else %}
      <div class="ai-exclusive-deals-placeholder-{{ ai_gen_id }}">
        {{ 'lifestyle-1' | placeholder_svg_tag }}
        <div class="ai-exclusive-deals-empty-state-{{ ai_gen_id }}">
          Add an image to showcase your exclusive deals
        </div>
      </div>
    {% endif %}

    {% if block.settings.enable_overlay %}
      <div class="ai-exclusive-deals-overlay-{{ ai_gen_id }}"></div>
    {% endif %}

    <div class="ai-exclusive-deals-content-{{ ai_gen_id }}">
      {% if block.settings.show_badge and block.settings.badge_text != blank %}
        <div class="ai-exclusive-deals-badge-{{ ai_gen_id }}">
          {{ block.settings.badge_text }}
        </div>
      {% endif %}

      {% if block.settings.heading != blank %}
        <h2 class="ai-exclusive-deals-heading-{{ ai_gen_id }}">
          {{ block.settings.heading }}
        </h2>
      {% endif %}

      {% if block.settings.subheading != blank %}
        <div class="ai-exclusive-deals-subheading-{{ ai_gen_id }}">
          {{ block.settings.subheading }}
        </div>
      {% endif %}

      {% if block.settings.button_text != blank %}
        <a
          href="{{ block.settings.button_link }}"
          class="ai-exclusive-deals-button-{{ ai_gen_id }}"
        >
          {{ block.settings.button_text }}
        </a>
      {% endif %}
    </div>
  </div>
</div>

